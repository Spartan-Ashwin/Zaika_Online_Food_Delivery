@model IEnumerable<ZaykaMvc.Models.Dish>

@{
    ViewData["Title"] = "All Dish";
}

<h1 class="my-4 text-center">All Dishes</h1>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-warning" asp-action="EditDish" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="DeleteDish" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h1 {
        font-family: 'Rubik', sans-serif;
        font-weight: 700;
    }

    .table {
        border-radius: 5px;
        overflow: hidden;
    }

        .table thead {
            background-color: #343a40;
            color: white;
        }

    .btn {
        margin: 0 2px;
    }

    .container {
        max-width: 1000px;
        margin: auto;
    }
</style>
