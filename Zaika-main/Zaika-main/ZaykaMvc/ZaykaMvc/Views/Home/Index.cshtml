@model IEnumerable<ZaykaMvc.Models.Dish>
@inject IHttpContextAccessor accessor
@* We can't access session directly in razor that's why we use IHttpContextAccessor object*@

@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .carousel-item img {
            object-fit: cover;
            height: 500px;
        }

        .card-deck {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            justify-content: center;
        }

        .card {
            width: 18rem;
            gap : 10px;
        }
            .card:hover {
                transform: scale(1.1);
                transition: transform .2s;
                box-shadow: 10px 10px 10px #37475a;
            }

            .card img {
                height: 200px;
                object-fit: cover;
            }

        .username {
            text-align: center;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    @if (accessor.HttpContext.Session.GetString("username") == null)
    {
        <script>window.location.href = '/Admin/Login';</script>
    }
    <div class="container" style="margin-top:130px; z-index:-1">

        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://cdn.create.vista.com/common/1969f093-ba21-4c96-b80c-faf42984961f_1024.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://i0.wp.com/blog.beepit.com/wp-content/uploads/2021/01/MCO2.0-Malaysia-lockdown-StayHomeLah-campaign-15-discount-promo-code-Beep-food-delivery-app.jpg?resize=1024%2C341&ssl=1" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://d1csarkz8obe9u.cloudfront.net/posterpreviews/copy-of-food-delivery-design-template-9ee632241653a3457f7f114533af94e9_screen.jpg?ts=1677560077" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <br />
        <div class="card-deck">
            @foreach (var item in Model)
            {
                <div class="card">
                    <img src="~/images/@item.ImageFileName" alt="@item.Name" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-text">Quantity = @item.Quantity</h6>
                        <h6 class="card-text">Only in ₹ @item.Price</h6>
                        <a asp-controller="User" asp-action="MyCart" asp-route-id="@item.Id" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

